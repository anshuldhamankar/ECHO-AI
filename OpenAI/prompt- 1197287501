import java.util.*;

public class hotelHotelManagementSystem {

    public static void main(String[] args) {
        // create a list of rooms
        List<String> roomList = new ArrayList<>();
        // list to hold the room occupancy
        List<Integer> occupancyList = new ArrayList<>();
        // list to hold the room price
        List<Double> priceList = new ArrayList<>();
        // list to store payment info
        List<String> paymentInfo = new ArrayList<>();
        // create AI object
        AI ai = new AI();
        // create user input scanner
        Scanner scanner = new Scanner(System.in);
        // flag to exit program
        boolean exit = false;
         
        while(!exit){
            // show menu
            System.out.println("1. Add a room");
            System.out.println("2. Search for a room");
            System.out.println("3. Check-in");
            System.out.println("4. Check-out");
            System.out.println("5. Exit");
            System.out.print("Enter a choice: ");
            int choice = scanner.nextInt();
            scanner.nextLine();
            
            switch(choice){
            case 1:
                // get information about the new room
                String roomDetails = ai.getRoomInformation();
                // separate details
                String[] detailsArray = roomDetails.split(" ");
                // add room to list
                roomList.add(detailsArray[0]);
                occupancyList.add(Integer.parseInt(detailsArray[1]));
                priceList.add(Double.parseDouble(detailsArray[2]));
                System.out.println("Room added successfully.");
                break;
            case 2:
                System.out.print("Enter number of occupants: ");
                int numOccupants = scanner.nextInt();
                scanner.nextLine();
                
                if(ai.searchForRoom(roomList, numOccupants)){
                    System.out.println("Room available.");
                }
                else{
                    System.out.println("Room not available.");
                }
                break;